{
	"manifest_version": 1,
	"title": "Tetris App",
	"identifier": "tetris",
	"version": "0.1",
	"description": "A Tetris game for Swipes",
	"main_app": {
		"index": "index.html"
	},
	"tables":[
		{
			"name": "highscore",
			"indexes": ["score"]
		}
	],
	"listenTo": [
		{
			"table": "highscore",
			"query": {
				"limit": 5,
				"order": "-score"
			}
		}
	]
}
